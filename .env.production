# Production Environment Configuration for Flag Guessing Game
# Copy this file to .env and update the values for your production environment

# Application Configuration
NODE_ENV=production
FRONTEND_URL=https://your-domain.com

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=flag_guessing_game
DB_USER=postgres
DB_PASSWORD=your-secure-database-password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-secure-redis-password

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# CDN Configuration
CDN_BASE_URL=https://flagcdn.com/w320

# API Configuration
VITE_API_URL=https://your-api-domain.com/api

# SSL/TLS Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Performance Configuration
MAX_CONNECTIONS=100
KEEP_ALIVE_TIMEOUT=5000